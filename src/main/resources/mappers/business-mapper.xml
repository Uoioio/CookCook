<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Business">
<select id="login" resultType="boolean">select count(*) from Member where
		businessId= #{businessId} and pw= #{pw}
	</select>
	<!-- 폰번호로 아이디값 가져오는 쿼리문 -->
	<select id="getIdByPhone" resultType="String">
	select businessId from BusinessMember where phone = #{phone}
	</select>
	
	<select id="isMember" resultType="boolean">
		select count(*) from Member where ${key} = #{value}
	</select>
	
	<select id="phoneDuplication" resultType="boolean">
		select count(*) from Member where ${key} = #{value} and authGradeCode = 1002
	</select>
		
	<select id="phoneCheck" resultType="boolean">
		select count(*) from Member where phone = #{phone}
	</select>
	
	<insert id="insert">
		insert into Member values(member_seq.nextval,null,#{businessId},#{pw},#{name},#{companyName},#{authGradeCode},null,#{birthDate},#{phone},#{eMail},null,#{zipcode},#{address1},#{address2},#{agree},sysdate,null,null)
	</insert>
	
	<insert id="totalInsert">
		insert into TotalMember values(total_member_seq.nextval, 0, ${businessmember}, 1003)
	</insert>
	
	<update id="updatePw">
		update Member set pw = #{pw} where businessId = #{businessId}
	</update>
	
	<select id="selectBusinessMemberInfo" resultType="cc.spring.dto.MemberDTO">
		select * from member where businessid = #{id}
	</select>
</mapper>